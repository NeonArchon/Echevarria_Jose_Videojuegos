<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/videojuegos</property>
        <property name="connection.username">root</property>

        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>

        <!-- Entitites -->
        <mapping class="com.example.echevarria_castillo_jose_ignacio_videojuegos.modelo.entities.Cliente"/>
        <mapping class="com.example.echevarria_castillo_jose_ignacio_videojuegos.modelo.entities.Administrador"/>
        <mapping class="com.example.echevarria_castillo_jose_ignacio_videojuegos.modelo.entities.Categoria"/>
        <mapping class="com.example.echevarria_castillo_jose_ignacio_videojuegos.modelo.entities.Juego"/>
        <mapping class="com.example.echevarria_castillo_jose_ignacio_videojuegos.modelo.entities.Compra"/>
    </session-factory>
</hibernate-configuration>