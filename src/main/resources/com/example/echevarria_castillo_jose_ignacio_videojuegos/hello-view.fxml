<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.echevarria_castillo_jose_ignacio_videojuegos.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label
    text="Inicio de Sesion" style="-fx-font-size: 20; -fx-font-weight: bold;"
    ></Label>

    <VBox>

        <Label text="Usuario/E-mail"/>
        <TextField fx:id="txtUsuario" promptText="Ingrese Usuario"/>

        <Label text="Contraseña"/>
        <TextField fx:id="txtContrasena" promptText="Ingrese Contraseña"/>

    </VBox>

    <Label fx:id="lblMensaje" style="-fx-text-fill: red;"/>

    <HBox spacing="10" alignment="CENTER">

    <!--
        <Button fx:id="btnLogin" text="Iniciar Sesión" onAction="#onLoginClick" defaultButton="true"/>

        <Button fx:id="btnRegistro" text="Registrarse" onAction="#onRegistroClick"/>
    -->
    </HBox>

    <Button text="Hello!" onAction="#onHelloButtonClick"/>
</VBox>
